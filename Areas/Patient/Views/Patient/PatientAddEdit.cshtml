
@{
    ViewData["Title"] = "PatientAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Hospital_Management_System.Areas.Patient.Models.PatientModel
<div>
    <div style="background-color:white; overflow-y:scroll; overflow-x:hidden;height:483px; padding:20px">
       <div class="col-md-12">
            <h3>@TempData["PatientInsertMsg"]</h3>
                <div class="portlet-title">
                    <div class="row">
                        <div class="caption font-green-haze col-md-10">
                            <i class="icon-plus font-green"></i>
                            <span class="caption-subject bold uppercase">Patient Add/Edit</span>
                        </div>
                    </div>
                </div>
                <br />

            <form method="post" asp-area="Patient" asp-controller="Patient" asp-action="Save" enctype="multipart/form-data">
                    @Html.HiddenFor(x=>x.PatientID)

                <div class="form-group">
                    <label><span class="text-danger">*</span>Patient Name</label>
                    <input type="text" class="form-control" asp-for="PatientName" placeholder="Enter Patient Name" />
                </div>
                <span asp-validation-for="PatientName" class="text-danger"></span>

                <div class="form-group">
                    <label><span class="text-danger">*</span>Date of Birth</label>
                    <input type="date" class="form-control" asp-for="DateOfBirth" />
                </div>
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>

                <div class="form-group">
                    <label><span class="text-danger">*</span>Gender</label>
                    <input type="text" class="form-control" asp-for="Gender" placeholder="Enter Gender" />
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>

                <div class="form-group">
                    <label><span class="text-danger">*</span>Blood Group</label>
                    <select class="form-control" asp-for="BloodGroupID" asp-items="@(new SelectList(ViewBag.BloodGroupList,"BloodGroupID","BloodGroupName"))">
                        <option value="">Select BloodGroup</option>
                    </select>
                </div>
                <span asp-validation-for="BloodGroupID" class="text-danger"></span>

                <div class="form-group">
                    <label><span class="text-danger">*</span>Mobile Number</label>
                    <input type="text" class="form-control" asp-for="MobileNumber" placeholder="Enter MobileNumber" />
                </div>
                <span asp-validation-for="MobileNumber" class="text-danger"></span>

                <div class="form-group">
                    <label><span class="text-danger">*</span>Address</label>
                    <input type="text" class="form-control" asp-for="Address" placeholder="Enter Address" />
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>

                <input type="submit" class="btn btn-success" />
                <a asp-area="Patient" asp-controller="Patient" asp-action="Back">
                    <button type="button" class="btn btn-dark">Cancel</button>
                </a>
            </form>
       </div>
    </div>
</div>



